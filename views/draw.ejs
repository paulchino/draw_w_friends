<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8"/>
<!-- <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script> -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
	<script type ="text/javascript" src="/socket.io/socket.io.js"></script>
	<script src="./javascript/app.js"></script>
	<link rel="stylesheet" type="text/css" href="./stylesheets/chat.css">



</head>
	<body>	
		<div class='container'>
			<div class='row'>
				<div class='col-md-12'>
					<div class='title'>
						<h2 class='inline'>draw with friends</h2>
						<h4 class='active-drawer inline' style='opacity: 1;'></h4>
					</div>
				</div>
			</div>
			<div class='row'>
				<div class='nav'>
					<div class='col-md-3'>
						<h5 class='inline'>brush/eraser size: </h5>
						<button class='cir-btn size-2'>
							<div id='circle2'></div>
						</button>
						<button class='cir-btn size-4'>
							<div id='circle4'></div>
						</button>
						<button class='cir-btn size-6'>
							<div id='circle6'></div>
						</button>
						
					</div>
					<div class='col-md-3'>
						<button type="button" id='brush-btn' class='btn btn-info btn-sm' value='brush'>brush</button>						
						<button type="button" id='eraser-btn' class='btn btn-default btn-sm' value='Eraser'>eraser</button>
						<button type="button" id='save' class="btn btn-success btn-sm">email</button>
						<button type="button" id='restart' class='btn btn-danger btn-sm'>start over</button>
					</div>
					<div class='col-md-3'>
						<h5 class='inline'>brush color:</h5>
						<input type='color' id='color' >
					</div>

				</div>
			</div>
			<div class='row'>
				<div class='col-md-9'>
					<div id="sketch">
						<canvas id="paint" class='brush_cursor' width='800' height='500'></canvas>
					</div>
				</div>
				<div class='row'>
					<div class='col-md-3' id='online'>
							<p class='online-top'>online friends</p>
						<ol>
						</ol>
					</div>
					<div class='col-md-3'>
						<h3>friends chat</h3>
						<div class='text-box'>
						</div>
					</div>
					<div class='col-md-3'>
						<div class='mess-box'>
							<form id='form' action='/send_chat' method='post'>
								<div class='form-group'>
									<label for="Message">send message</label>
									 <input type="text" class="form-control chat" name='chat' placeholder="chat with friends!">
								</div>
							</form>
						</div>
					</div>

				</div>
			</div>

<!-- 			<div class='row'>
				<div class='col-md-12'>
					Line Thickness 
					<select id='thick'>
						<option value='1'>1</option>
						<option value='2'>2</option>
						<option selected='selected' value='3'>3</option>
						<option value='4'>4</option>
						<option value='5'>5</option>
					</select>
				</div>
			</div> -->


			<!-- Modal on site load -->
			<div class="modal fade" id="popupModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  			<div class="modal-dialog">
	    			<div class="modal-content">
	      				<div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					        <h4 class="modal-title" id="myModalLabel">Please Enter Name</h4>
	      				</div>
	      				<div class="modal-body">
					      	<form id='enter-form'>
					  			<div class="form-group">
					    			<label for="Name">Enter Name</label>
					    			<input type="text" name='name' class="form-control" id="username" placeholder="Enter Name">
					  			</div>
<!-- 					  			<select name ='room' class="form-control">
					  				<option value='room1'>Room 1</option>
					  				<option value='room2'>Room 2</option>
									<option value='room3'>Room 3</option>
								</select> -->
					  			<button type="submit" class="btn btn-default">Enter</button>
							</form>
	      				</div>
	    			</div>
	  			</div>
			</div>
			<!-- end of modal -->

			<!-- Modal for email drawing -->
			<div class="modal fade modal-admin" id="email-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel">draw with friends</h4>
			      </div>
			      <div class="modal-body">
			      	<h3>send your drawings to your friends!!!</h3>

			      	<form action='/drawing/send' method='post' id='email-form'>
    					<label for="exampleInputEmail1">Email address</label>
    					<input type="email" class="form-control" id="exampleInputEmail1" placeholder="example@gmail.com" name='email' value='paulchino@gmail.com'>
    					<input type='submit' class='btn btn-primary' value='send!'>
    				</form>

    				<h5>drawing image</h5>
    				<hr>
    				<div class='img-border'>
			      		<img id='save_img' alt="Dojo Image" />
			      	</div>
			      </div>
			      <div class="modal-footer">
<!-- 			      		<button class="btn btn-primary email-send" value='send!'>Send!</button> -->

			      </div>
			    </div>
			  </div>
			</div>
			<!-- End of Modal -->

		</div> <!-- end of container -->
	</body>
</html>


